{
  "name": "writers-mark-dom",
  "homepage": "https://github.com/FrancoisChabot/writers-mark-dom#readme",
  "version": "0.3.0",
  "description": "Dom Renderer for writers-mark",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "dependencies": {
    "writers-mark": "^0.3.0"
  },
  "devDependencies": {
    "@types/jsdom": "^16.2.5",
    "ava": "^3.13.0",
    "codecov": "^3.8.1",
    "jsdom": "^16.4.0",
    "nyc": "^15.1.0",
    "prettier": "^2.2.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "test": "nyc --reporter=lcov --reporter=text-summary ava",
    "coverage": "codecov",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format"
  },
  "files": [
    "lib/**/*"
  ],
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FrancoisChabot/writers-mark-dom.git"
  },
  "author": "Francois Chabot",
  "license": "ISC"
}
